{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@configs": ["src/configs"],
      "@configs/*": ["src/configs/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@hooks/*": ["src/hooks/*"],
      "@hocs/*": ["src/hocs/*"],
      "@helpers/*": ["src/helpers/*"],
      "@router/*": ["src/router/*"],
      "@router": ["src/router"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"],
      "@types": ["src/types"],
      "@public": ["public"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["src","src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.d.ts"]
      ,
  "references": [{ "path": "./tsconfig.node.json" }]
}
